# Copy this file to .env and fill the values. Do NOT commit your real .env to source control.
# Required environment variables for the backend

# MongoDB connection string (replace <username>, <password>, and host as appropriate)
# Example format (do NOT paste your real credentials into version control):
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.abcde.mongodb.net/foodhub?retryWrites=true&w=majority
MONGO_URI=

# JWT secret used to sign tokens. Use a long, random string in production.
JWT_SECRET=

# Server port (optional)
PORT=5000

# NODE_ENV (development|production)
NODE_ENV=development
